extends layout 

block content 
  .container
    h2 #{title}
    .car-wrapper
      .car-detail
        .car-image
          img.car.image-tag(src=car.image  alt=car.name style='width:100%; min-height: 100%')
          .car-title
            h3 #{car.name}
        .car-info
          .car-top
            span.see-info Number In Stock: #{car.numberInStock}
            span.see-info Model: #{car.model}
            span.see-info  #{car.category.name}
          .car-description #{car.description}
          .car-bottom
            span.see-info #{car.formatDate}
            span.see-info Price: $#{car.price}
      .car-links
        .detail-parent-link
          a.detail-link(href='/catalog/car/'+car._id+'/update')
            i.fa.fa-pencil(title="Update Car")
          p  Update
        .detail-parent-link
          a.detail-link( onclick='popUp()')
            i.fa.fa-trash-o(title="Delete Car")
          p  Delete
        .detail-parent-link
          a.detail-link(href='/catalog/car/'+car._id+'/checkout')
            i.fa.fa-shopping-cart(title="Checkout")
          p  Checkout
  //- Delete Modal 
  #id01.modal
    span.close(onclick="document.getElementById('id01').style.display='none'" title='Close Modal') &times;
    form.modal-content(method= 'POST' action=car.url+'/delete')
      .delete-container
        h1 Delete Account
        p Are you sure you want to delete your account?
        .clearfix
          button.cancelbtn(type='button' onclick="document.getElementById('id01').style.display='none'")
            a(href=car.url style='color: white') Cancel
          button.deletebtn(type='submit' onclick="document.getElementById('id01').style.display='none'") Delete
  span.cancel.back(onclick='goBack()') Back
  script.
    function goBack() {
      window.history.back();
    }
    function popUp() {
      document.getElementById('id01').style.display='block'
    }
    // Get the modal
    var modal = document.getElementById('id01');

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
