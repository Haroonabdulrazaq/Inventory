doctype html
html
  head
    title Car Deal || #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/category.css')
    link(rel='stylesheet', href='/stylesheets/car.css')
    link(rel='stylesheet', href='/stylesheets/delete.css')
    link(rel='stylesheet', href='/stylesheets/homepage.css')
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Miriam+Libre:wght@400;700&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  body
    block script
    //- script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js' integrity='sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=' crossorigin='anonymous')
    //- script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa' crossorigin='anonymous')
    block content
    .sidebar
      .active.active-homepage
        a.active(href='/catalog') CAR DEAL
          i.fa.fa-usd
        .hamburger
          i.fa.fa-bars(onclick='navToggle()')
      .nav
        a.nav-link(href='/catalog') Home
          i.fa.fa-fw.fa-home
        a.nav-link(href='/catalog/categories') Categories
          i.fa.fa-check-square
        a.nav-link(href='/catalog/cars') Cars
          i.fa.fa-car
        a.nav-link(href='/catalog/category/create') Create Category
          i.fa.fa-plus-square
        a.nav-link(href='/catalog/car/create') Create Car
          i.fa.fa-plus-circle
    script.
      let counter = 0;
      const navLink = document.querySelector('.nav')
        function navToggle() {
          console.log(counter)
          if (counter%2 === 0) {
            navLink.classList.remove('none')
            navLink.classList.add('block')
          } else {
            navLink.classList.remove('block')
            navLink.classList.add('none')
          }
            counter++;
        }